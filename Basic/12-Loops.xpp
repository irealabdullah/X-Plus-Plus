//While loop: 

static void WhileLoop(Args _args) 
{
    int i;
    i=0;
while (i<10) 
    {
        i++;
        print i;
    }
        pause;
}

// Doâ€¦ While loop 

static void DoWhileLoop(Args _args) 
{
    int i;
    i=0;
    do
    {
        i++;
        print i;//It will always execute once before condition is checked or not
        pause;
    } 
    while (i<10);
}

//For loop:

static void ForLoop(Args _args) 
{
    int i;

    for (i = 0; i < 10; i++)
    {
        print i; // after 10 value is terminated
        pause;
    }
}

