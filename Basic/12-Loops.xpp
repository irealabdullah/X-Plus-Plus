// Decremental For Loop
static void ForLoop(Args _args) 
{
    int i,len;
    int arr[5];
    arr[1] = 10;
    arr[2] = 20;
    arr[3] = 30;
    arr[4] = 40;
    arr[5] = 50;

    len = dimOf(arr);

    for ( i = len ; i >= 1 ; i--)
        {
            print arr[i]; // reverse order 50 40 30 20 10 
            pause;
        }
}
